{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ROS Node Remote Debug",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/ros_ws/src"
                }
            ]
        }
    ]
}